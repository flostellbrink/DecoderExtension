{
    "name": "Decoder Extension",
    "version": "1.0",
    "description": "Decode Base64 text using the context menu.",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "decoder.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "manifest_version": 2
}
